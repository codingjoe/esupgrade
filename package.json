{
  "name": "esupgrade",
  "version": "0.1.0",
  "description": "Auto-upgrade your JavaScript syntax",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "esupgrade": "./bin/esupgrade.js"
  },
  "scripts": {
    "test": "node --test --experimental-test-coverage --test-coverage-lines=100  --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=lcov.info --test-coverage-exclude=tests/* tests/*.test.js",
    "lint": "prettier --write --config=package.json src/**/*.js"
  },
  "keywords": [
    "javascript",
    "ecmascript",
    "modernize",
    "upgrade",
    "codemod",
    "ast",
    "transform"
  ],
  "author": "Johannes Maron",
  "license": "BSD-2-Clause",
  "dependencies": {
    "ast-types": ">=0.14.2",
    "commander": ">=14.0.2",
    "diff": ">=8.0.2",
    "jscodeshift": ">=17.3.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-jsdoc"
    ],
    "trailingComma": "all",
    "semi": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codingjoe/esupgrade.git"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-jsdoc": "^1.8.0",
    "prettier-plugin-organize-imports": "^4.3.0"
  }
}
